<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#700C0C">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FSU War Chant"
        android:id="@+id/war_chant"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:onClick="onWarClick"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FSU Fight Song"
        android:id="@+id/fight_song"
        android:layout_below="@+id/war_chant"
        android:layout_centerHorizontal="true"
        android:onClick="onFightClick"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FSU Victory Song"
        android:id="@+id/victory_song"
        android:layout_below="@+id/fight_song"
        android:layout_centerHorizontal="true"
        android:onClick="onVictoryClick"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gold and Garnet"
        android:id="@+id/gold_garnet"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onGoldClick"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FSU Cheer"
        android:id="@+id/cheer"
        android:layout_below="@+id/gold_garnet"
        android:layout_centerHorizontal="true"
        android:onClick="onCheerClick"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FSU 4th Quarter FanFare"
        android:id="@+id/fanfare"
        android:layout_below="@+id/cheer"
        android:layout_centerHorizontal="true"
        android:onClick="onFanfareClick"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seminole Uprising"
        android:id="@+id/uprising"
        android:layout_below="@+id/fanfare"
        android:layout_centerHorizontal="true"
        android:onClick="onUprisingClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stop"
        android:layout_below="@+id/uprising"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onStopClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:id="@+id/pause_play"
        android:layout_below="@+id/uprising"
        android:layout_alignRight="@+id/uprising"
        android:layout_alignEnd="@+id/uprising"
        android:onClick="onPlayClick"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fear The Spear"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

</RelativeLayout>
